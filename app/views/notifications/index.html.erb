<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-6">
    <h1>Notifications</h1>

    <table class="table" id="notifications_table">
      <thead>
        <tr>
          <th>To</th>
          <th>Message</th>

          <th>Frequency</th>
          <th>Duration</th>
        <!--  <th>Active</th>
          <th>Last</th> -->
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @notifications.each do |notification| %>
          <tr>
            <td>
              <%= link_to notification.name, notification%><br>
              <%= notification.email %><br>
              <%= notification.phone_number %>
            </td>
            <td><%= notification.message_text%></td>

            <td><%= notification.frequency %> hr</td>
            <td><%= notification.duration %> hrs</td>
          <!--  <td><%= notification.is_active %></td>
            <td><%= notification.last_sent %></td> -->
            <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_notification_path(notification), class: "btn"%></td>
            <td><%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, notification, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger-outline delete_button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div>
      <%= link_to 'New Notification', new_notification_path,  class: "btn btn-primary" %>
    </div>
  </div>

  <div class="col-sm-6"></div>
</div>
